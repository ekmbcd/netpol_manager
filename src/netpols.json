[
  {
    "metadata": {
      "name": "simple-netpol",
      "namespace": "default"
    },
    "spec": {
      "podSelector": {
        "matchLabels": {
          "app": "nginx"
        }
      },
      "policyTypes": ["Ingress", "Egress"],
      "ingress": [
        {
          "ports": [
            {
              "protocol": "TCP",
              "port": 6379
            }
          ],
          "from": [
            {
              "podSelector": {
                "matchLabels": {
                  "app": "nginx"
                }
              }
            }
          ]
        }
      ],
      "egress": [
        {
          "ports": null,
          "to": [
            {
              "podSelector": {
                "matchLabels": {
                  "pod": "1"
                }
              }
            }
          ]
        }
      ]
    }
  },
  {
    "metadata": {
      "name": "block-ingress",
      "namespace": "default"
    },
    "spec": {
      "podSelector": {
        "matchLabels": {
          "ingress": "block"
        }
      },
      "policyTypes": ["Ingress"]
    }
  },

  {
    "metadata": {
      "name": "one-to-one-ingress",
      "namespace": "default"
    },
    "spec": {
      "podSelector": {
        "matchLabels": {
          "pod": "2"
        }
      },
      "policyTypes": ["Ingress"],
      "ingress": [
        {
          "ports": [
            {
              "protocol": "TCP",
              "port": 6379
            }
          ],
          "from": [
            {
              "podSelector": {
                "matchLabels": {
                  "pod": "1"
                }
              }
            }
          ]
        }
      ]
    }
  },

  {
    "metadata": {
      "name": "multiple-ingress",
      "namespace": "default"
    },
    "spec": {
      "podSelector": {
        "matchLabels": {
          "pod": "3"
        }
      },
      "policyTypes": ["Ingress"],
      "ingress": [
        {
          "ports": [
            {
              "protocol": "UDP",
              "port": 6379
            },
            {
              "protocol": "TCP",
              "port": 6380
            }
          ],
          "from": [
            {
              "namespaceSelector": {
                "matchLabels": {
                  "kubernetes.io/metadata.name": "test-ns"
                }
              },
              "podSelector": {
                "matchLabels": {
                  "app": "nginx"
                }
              }
            },
            {
              "podSelector": {
                "matchLabels": {
                  "app": "nginx"
                }
              }
            }
          ]
        }
      ]
    }
  }
]
